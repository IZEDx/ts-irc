{
  "name": "ts-irc",
  "version": "0.0.1",
  "description": "IRC implementation in TypeScript",
  "main": "dist/main.js",
  "bin": {
    "ts-irc": "./ts-irc.js",
    "ts-irc-test": "./ts-irc-test.js"
  },
  "scripts": {
    "start": "node ts-irc.js",
    "test": "node ts-irc-test.js",
    "dev": "npm run clear && (npm run dev-server & npm run dev-test)",
    "build": "npm run clear && npm run build-server && npm run build-test",
    "build-server": "cross-env NODE_ENV=production parcel build src/main.ts --public-url . --out-dir ./dist/ --target node",
    "build-test": "cross-env NODE_ENV=production parcel build test/test.ts --public-url . --out-dir ./dist/ --target node",
    "dev-server": "parcel watch src/main.ts --out-dir ./dist/ --target node",
    "dev-test": "parcel watch test/test.ts --out-dir ./dist/ --target node",
    "clear": "rm -rf dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IZEDx/ts-irc.git"
  },
  "author": "Niklas KÃ¼htmann",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/IZEDx/ts-irc/issues"
  },
  "homepage": "https://github.com/IZEDx/ts-irc#readme",
  "devDependencies": {
    "@types/node": "^8.0.53",
    "@types/yargs": "^10.0.0",
    "parcel-bundler": "latest",
    "typescript": "^2.6.2",
    "cross-env": "latest"
  },
  "dependencies": {
    "chalk": "^2.3.0",
    "yargs": "^10.0.3"
  }
}
